            { "type": "columnproperty", "size": { "mode": "fixed", "value": 0 }, "align": "l" },
            { "type": "columnproperty", "size": { "mode": "flex", "value": 1 }, "align": "l" }
          ],
          "rows": [
            [
              { "type": "text", "value": "Name", "styles": [{ "$ref": "#/styles/header" }] },
              { "type": "repeat", "value": "-" }
            ],
            [
              { "type": "text", "value": "Alice" },
              { "type": "text", "value": "Engineer" }
            ]
          ]
        }
      ]
    }
  ]
}
