{
  "$schema": "./schema.json",
  "styles": {
    "header": { "type": "style", "fg": "#FF0000", "bg": "#FFFFFF", "bold": true }
  },
  "content": [
    {
      "type": "indent",
      "indent": 1,
      "content": [
        {
          "type": "table",
          "properties": { "type": "tableproperty", "align": "l" },
